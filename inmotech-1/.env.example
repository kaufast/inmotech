# Database
DATABASE_URL="postgresql://username:password@localhost:5432/real_estate_crowdfunding?schema=public"

# JWT Secrets (generate with: openssl rand -hex 32)
JWT_SECRET="your-super-secure-jwt-secret-key-here"
JWT_REFRESH_SECRET="your-super-secure-refresh-secret-key-here"

# AWS SES Configuration
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-aws-access-key-id"
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"
SES_SENDER_EMAIL="noreply@inmotech.com"
FROM_EMAIL="noreply@inmotech.com"

# Additional SES Configuration
AWS_SES_CONFIGURATION_SET="inmotech-emails"
AWS_SES_DEFAULT_TEMPLATE="default-template"

# Frontend URL
FRONTEND_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:3000/api"

# Environment
NODE_ENV="development"

# File Upload (if using AWS S3)
AWS_S3_BUCKET_NAME="your-s3-bucket-name"
AWS_S3_REGION="us-east-1"

# Payment Processing (if using Stripe)
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."

# Optional: Redis for sessions/caching in production
REDIS_URL="redis://localhost:6379"

# Optional: Sentry for error tracking
SENTRY_DSN="your-sentry-dsn"

# Security
BCRYPT_ROUNDS="12"
SESSION_SECRET="your-session-secret"

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS="100"
RATE_LIMIT_WINDOW_MS="900000"  # 15 minutes